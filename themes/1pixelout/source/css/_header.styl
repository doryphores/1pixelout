// The site header is positioned at the top of each page and contains:
// - The site's logo/brand
// - A link to the RSS feed
// - The site's main navigation

.c-site-header
  padding 60px 10px 0
  text-align center

  +for_breakpoint(mobile)
    padding 40px 0 0


// The title/branding element is a simple boxed title

.c-site-header__branding
  display inline-block
  margin 0
  font-weight bold
  font-size 16px
  line-height 32px
  text-transform uppercase
  letter-spacing 2px
  vertical-align middle
  background-color color-primary
  transition background-color

  a
    display block
    padding 0 10px
    color white
    text-decoration none

  &:hover, &:focus
    background-color color-primary-hover


// The header RSS link is an icon positioned to the right of the title

.c-site-header__rss-link
  display inline-block
  width 32px
  height 32px
  margin-left 2px
  background-color color-primary
  color white
  line-height 32px
  vertical-align middle
  transition background-color .2s

  &:hover, &:focus
    background-color color-primary-hover

  .octicon
    line-height 32px
    vertical-align top
    font-size 20px


// Site navigation items have 3 states:
// - default state
// - hover/focus state with an animated background and underline
// - current state with a small centered arrow pointing downward to the page

.c-site-nav
  margin-top 40px
  font-size 16px
  font-weight bold
  text-transform uppercase

.c-site-nav__item
  position relative
  text-decoration none

  + .c-site-nav__item
    margin-left 20px

    +for_breakpoint(mobile)
      margin-left 10px

  // Position links so they show on top of pseudo elements
  a
    display block
    position relative

  // The initial state of the underline pseudo-element
  &::before
    content ""
    position absolute
    bottom 0
    left 50%
    right 50%
    height 1px
    background-color color-primary
    transition all .1s

  &:hover, &:focus
    &::before
      left 0
      right 0
      height 2px

.c-site-nav__item--current
  // Show the underline
  &::before
    left 0
    right 0
    height 2px

  // Arrow pseudo-element
  &::after
    content ""
    position absolute
    bottom -8px
    left 50%
    height 0
    width 0
    margin-left -8px
    background-color transparent
    border-color transparent
    border-top-color color-primary
    border-style solid
    border-width 8px 8px 0
