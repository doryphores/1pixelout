@import "https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,400italic|Roboto+Mono:400,700,400italic"

color-page    = #FFF
color-text    = #535353
color-primary = #2B7EC5

mediaqueries = {
  mobile  : "only screen and (max-width: 600px)",
  tablet  : "only screen and (min-width: 601px) and (max-width: 800px)"
  desktop : "only screen and (min-width: 801px)"
}

for_breakpoint(breakpoints)
  for breakpoint in breakpoints
    @media mediaqueries[breakpoint]
      {block}

.u-mobile-hide
  +for_breakpoint(mobile)
    display none

*
  box-sizing border-box

body
  margin 0 10px 10px
  background-color color-page

a
  color color-primary
  text-decoration none

section
  margin 0 auto
  padding 40px 0
  max-width 800px

@import "_typography"
@import "_header"
@import "_footer"
@import "_code"
@import "_article"
@import "_archive"
