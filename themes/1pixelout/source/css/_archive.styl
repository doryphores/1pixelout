.archive-list
  list-style none
  margin 0
  padding 0

.archive-list__item
  display block
  padding 20px 0
  border-bottom 1px dotted color-text
  transition all .2s

  &:hover, &:focus
    background-color lighten(color-primary, 95%)

    +for_breakpoint(desktop)
      padding 20px 10px

.archive-list__title
  display inline
  font-size inherit
  font-weight bold

.archive-list__date
  &:before
    content "/"
