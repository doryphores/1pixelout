.article + .article
  margin-top 60px


.article__header
  padding 0 0 40px 0
  border-bottom 6px solid color-text
  text-align center
  text-transform uppercase


.article__title
  margin 0

  a
    color color-text
    text-decoration none

    &:hover
      background-color lighten(color-text, 90%)


.article__meta
  position relative
  display inline-block
  padding 20px 20px 0
  margin-top 20px
  color lighten(color-text, 50%)
  font-size 14px
  font-weight 600

  &::before
    content ""
    position absolute
    top 0
    left 50%
    width 100px
    margin-left -50px
    border-top 1px dotted color-text

  a
    color inherit
    text-decoration none


.article__date
  time
    font-weight 700


.article__author
  white-space nowrap

  &::before
    content "◈"
    margin 0 .5em
    font-weight 400

  strong
    font-weight 700


.article__tags
  color lighten(color-text, 50%)
  text-transform uppercase
  white-space nowrap

  &::before
    content "◈"
    margin 0 .5em
    font-weight 400

  +for_breakpoint(mobile)
    display block

    &::before
      display none

  a
    padding 1px 4px
    color color-primary
    background lighten(color-text, 80%)
    border-radius 2px
    transition all .1s

    &::before
      content "▶"
      margin-right .25em
      font-weight 400
      font-size 12px

    + a
      margin-left 1px

    &:hover
      background-color color-primary
      color color-page


.article__body
  padding-top 40px

  a
    position relative
    border-bottom 1px dotted color-primary
    transition background-color .1s

    &::after
      content ""
      position absolute
      bottom -1px
      left 50%
      right 50%
      height 1px
      background-color color-primary
      transition all .2s

    &:hover
      background-color lighten(color-text, 80%)

      &::after
        left 0
        right 0
