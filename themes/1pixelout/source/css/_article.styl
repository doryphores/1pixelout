.article + .article
  margin-top 60px

.article__header
  padding 0 0 40px 0
  margin-bottom 40px
  border-bottom 6px solid color-text
  text-align center
  text-transform uppercase

.article__title
  margin 0
  font-weight bold
  font-size 50px
  line-height 1.4

  a
    color color-text
    text-decoration none

    &:hover
      background-color lighten(color-text, 90%)

.article__meta
  display inline-block
  padding 20px 20px 0
  margin-top 20px
  border-top 1px dotted color-text
  color lighten(color-text, 50%)
  font-size 14px
  font-weight 600

  a
    color inherit
    text-decoration none

.article__tags
  color lighten(color-text, 50%)
  text-transform uppercase

  &::before
    content "◈"
    margin 0 .5em
    font-weight 400

  a
    padding 1px 4px
    color color-primary
    background lighten(color-text, 80%)
    border-radius 2px
    transition all .1s

    &::before
      content "▶"
      margin-right .25em
      font-weight 400
      font-size 12px

    + a
      margin-left 1px

    &:hover
      background-color color-primary
      color color-page
