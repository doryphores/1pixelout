.o-pagination
  margin-top 80px
  text-align center

  +for_breakpoint(mobile)
    margin-top 60px

.o-pagination__link
  position relative
  display inline-block
  padding 0 10px
  background-color color-primary
  border-color color-primary
  color color-page
  font-size 14px
  font-weight 600
  transition all .2s

  + .o-pagination__link
    margin-left 1px

  &:hover, &:focus
    background-color color-primary-hover
    border-color color-primary-hover

    +for_breakpoint(desktop)
      .o-pagination__link-title
        display block

.o-pagination__link--prev::before
  content "❮"
  margin-right .25em
  font-size 16px
  font-weight normal
  line-height 1

.o-pagination__link--next::after
  content "❯"
  margin-left .25em
  font-size 16px
  font-weight normal
  line-height 1

.o-pagination__link-title
  display none
  position absolute
  bottom 40px
  left 50%
  width 280px
  margin-left -140px
  padding 5px 10px 8px
  font-weight normal
  line-height 20px
  background-color inherit
  border-color inherit
  border-radius 2px

  &::after
    content ""
    position absolute
    bottom -8px
    left 50%
    height 0
    width 0
    margin-left -8px
    border transparent
    border-top-color inherit
    border-style solid
    border-width 8px 8px 0
