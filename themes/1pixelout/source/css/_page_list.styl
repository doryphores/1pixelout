.o-page-list
  list-style none
  margin 0
  padding 0

  +for_breakpoint(mobile)
    margin 0 -10px

.o-page-list__item
  display block
  padding 20px 0
  border-bottom 1px dotted color-text
  transition all .2s

  +for_breakpoint(mobile)
    padding 20px 10px
    transition-property background-color

  &:hover, &:focus
    background-color lighten(color-primary, 95%)

    +for_breakpoint(desktop)
      padding 20px 10px

.o-page-list__item-title
  display inline
  font-size inherit
  font-weight bold

.o-page-list__item-date
  &:before
    content " / "
