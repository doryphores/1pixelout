.tag-cloud
  text-align center
  margin 20px 0
  padding 0
  list-style none
  text-transform uppercase
  font-size 14px
  font-weight 600

.tag-cloud__item
  display inline-block
  margin 2px

.tag-cloud__link
  position relative
  display inline-block
  padding-left 8px
  background color-primary
  border-color color-primary
  color white
  border-radius 2px

  .tag-cloud__item--current &,
  &:hover, &:focus
    border-color color-primary-hover
    background-color color-primary-hover

.tag-cloud__count
  display inline-block
  margin-left 8px
  padding 0 8px
  border-left 1px dotted white
