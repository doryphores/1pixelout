body
  font-family "Open Sans", sans-serif
  font-size 18px
  line-height 30px
  color color-text
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

pre,
code
  font-family "Roboto Mono"
  font-weight normal
  font-size 14px

h1
  font-weight bold
  font-size 50px
  line-height 1.2

  +for_breakpoint(tablet)
    font-size 40px

  +for_breakpoint(mobile)
    font-size 30px

h2
  font-size 24px
  line-height 1.2

h3
  font-weight bold
  font-size 18px

blockquote
  margin-left 0
  padding 5px 30px
  border-left 1px dotted lighten(color-text, 50%)

  p
    margin 0
    font-style italic
    color lighten(color-text, 50%)
