code
  background-color lighten(color-text, 80%)
  border-radius 2px
  padding 4px 5px

$code-block
  display block
  overflow-x auto
  margin 0
  padding 10px
  background #3f3f3f
  border-radius 2px
  color #dcdcdc
  line-height 22px

  +for_breakpoint(mobile tablet)
    margin 0 -10px
    border-radius 0

pre code
  @extends $code-block

/*
 * Zenburn style from voldmar.ru (c) Vladimir Epifanov <voldmar@voldmar.ru>
 * based on dark.css by Ivan Sagalaev
 */

.highlight
  @extends $code-block
  padding 0

  td
    padding 10px

  pre
    margin 0

  .gutter
    text-align right
    opacity 0.5
    border-right 1px solid darken(#dcdcdc, 50%)

  .keyword,
  .tag,
  .css .class,
  .css .id,
  .lisp .title,
  .nginx .title,
  .request,
  .status,
  .clojure .attribute
    color #e3ceab

  .django .template_tag,
  .django .variable,
  .django .filter .argument
    color #dcdcdc

  .number,
  .date
    color #8cd0d3

  .dos .envvar,
  .dos .stream,
  .variable,
  .apache .sqbracket,
  .name
    color #efdcbc

  .dos .flow,
  .diff .change,
  .python .exception,
  .python .built_in,
  .literal,
  .tex .special
    color #efefaf

  .diff .chunk,
  .subst
    color #8f8f8f

  .dos .keyword,
  .decorator,
  .title,
  .type,
  .diff .header,
  .ruby .class .parent,
  .apache .tag,
  .nginx .built_in,
  .tex .command,
  .prompt
    color #efef8f

  .dos .winutils,
  .ruby .symbol,
  .ruby .symbol .string,
  .ruby .string
    color #dca3a3

  .diff .deletion,
  .string,
  .tag .value,
  .preprocessor,
  .pragma,
  .built_in,
  .smalltalk .class,
  .smalltalk .localvars,
  .smalltalk .array,
  .css .rule .value,
  .attr_selector,
  .pseudo,
  .apache .cbracket,
  .tex .formula,
  .coffeescript .attribute
    color #cc9393

  .shebang,
  .diff .addition,
  .comment,
  .annotation,
  .pi,
  .doctype
    color #7f9f7f

  .coffeescript .javascript,
  .javascript .xml,
  .tex .formula,
  .xml .javascript,
  .xml .vbscript,
  .xml .css,
  .xml .cdata
    opacity 0.5
